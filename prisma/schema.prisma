generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum ListingStatus {
  DRAFT
  PENDING_REVIEW
  ACTIVE
  PENDING_SALE
  SOLD
  EXPIRED
}

enum PropertyType {
  SINGLE_FAMILY
  CONDO
  TOWNHOUSE
  MULTI_FAMILY
  APARTMENT
  LAND
  COMMERCIAL
  MOBILE
}

enum ListingType {
  FOR_SALE
  FOR_RENT
}

enum ListingPackage {
  SMART_SELLER
  FULL_SERVICE_AGENT
}

// Buyer Dashboard Enums
enum SavedHomeStatus {
  SAVED
  TOURING
  OFFER_SUBMITTED
}

enum TourStatus {
  REQUESTED
  SCHEDULED
  COMPLETED
  CANCELLED
}

enum OfferStatus {
  DRAFT
  SUBMITTED
  COUNTERED
  ACCEPTED
  REJECTED
  WITHDRAWN
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  name      String?
  role      Role      @default(USER)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  listings  Listing[]

  // Buyer relations
  savedHomes SavedHome[] @relation("BuyerSavedHomes")
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
  @@index([token])
}

model Listing {
  id          String        @id @default(cuid())
  title       String?
  description String?       @db.Text
  status      ListingStatus @default(DRAFT)

  // Basics
  propertyType PropertyType
  listingType  ListingType   @default(FOR_SALE)
  listingPackage ListingPackage?
  price        Decimal      @db.Decimal(12, 2)
  
  // Location
  address     String
  unitNumber  String?
  city        String
  state       String
  zipCode     String
  county      String?
  neighborhood String?
  
  // Details
  bedrooms    Int
  bathrooms   Decimal       @db.Decimal(3, 1) // Allows 1.5, 2.5 etc
  squareFeet  Int
  lotSize     Decimal?      @db.Decimal(10, 2)
  yearBuilt   Int?
  stories     Int?
  
  // Features (stored as JSON or boolean flags - using boolean for simplicity/querying)
  features    Json?         // Flexible storage for amenities like pool, ac, etc.
  
  // Media
  photos      String[]      // Array of URLs
  virtualTour String?
  videoUrl    String?
  
  // Financial
  hoaFee      Decimal?      @db.Decimal(10, 2)
  taxAmount   Decimal?      @db.Decimal(10, 2)

  // Metrics (manually updated)
  scheduledShowings Int     @default(0)
  offersReceived    Int     @default(0)

  // Relations
  userId      String
  user        User          @relation(fields: [userId], references: [id])
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([userId])
  @@index([status])
  @@index([city, state])
  @@index([price])
}

// ==========================================
// BUYER DASHBOARD MODELS
// ==========================================

model SavedHome {
  id          String          @id @default(cuid())
  userId      String
  user        User            @relation("BuyerSavedHomes", fields: [userId], references: [id], onDelete: Cascade)

  // Property info (manual entry - no scraping)
  address     String
  city        String?
  state       String?
  zipCode     String?
  price       Decimal?        @db.Decimal(12, 2)
  bedrooms    Int?
  bathrooms   Decimal?        @db.Decimal(3, 1)
  squareFeet  Int?
  listingUrl  String?         // Reference only, not scraped
  notes       String?         @db.Text

  status      SavedHomeStatus @default(SAVED)

  // Relations
  tours       Tour[]
  offer       Offer?

  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  @@index([userId])
  @@index([status])
}

model Tour {
  id            String      @id @default(cuid())
  savedHomeId   String
  savedHome     SavedHome   @relation(fields: [savedHomeId], references: [id], onDelete: Cascade)

  requestedDate DateTime?
  scheduledDate DateTime?
  availability  String?     @db.Text  // User's availability notes
  status        TourStatus  @default(REQUESTED)
  notes         String?     @db.Text

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([savedHomeId])
  @@index([status])
}

model Offer {
  id          String      @id @default(cuid())
  savedHomeId String      @unique
  savedHome   SavedHome   @relation(fields: [savedHomeId], references: [id], onDelete: Cascade)

  amount      Decimal?    @db.Decimal(12, 2)
  status      OfferStatus @default(DRAFT)
  notes       String?     @db.Text

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([status])
}
